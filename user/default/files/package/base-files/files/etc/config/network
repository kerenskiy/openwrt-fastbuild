
config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fd0d:7613:6a62::/48'

config interface 'network'
	option proto 'dhcp'
	option delegate '0'
	option device 'bridge'

config device
	option name 'eth0'
	option ipv6 '0'

config device
	option name 'wlan0'
	option ipv6 '0'

config device
	option type 'bridge'
	option name 'bridge'
	list ports 'eth0'
	list ports 'wlan0'
	option ipv6 '0'

